{
  "name": "lets-ui-css",
  "version": "0.11.0",
  "description": "A fluid and multi-brand design system for web projects.",
  "keywords": [
    "css",
    "sass",
    "scss",
    "clamp",
    "container",
    "flexbox",
    "responsive",
    "design system",
    "framework",
    "figma"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/mateusvillain/lets-ui-css.git"
  },
  "license": "MIT",
  "author": {
    "name": "Mateus Villain",
    "email": "mateus@mateusvillain.com",
    "url": "https://mateusvillain.com"
  },
  "type": "module",
  "main": "scss/letsui.scss",
  "style": "src/letsui.css",
  "files": [
    "scss/letsui.scss",
    "src/letsui.css",
    "src/letsui.min.css"
  ],
  "bugs": {
    "url": "https://github.com/mateusvillain/lets-ui-css/issues"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:tokens": "tz build --resolver resolver.json",
    "tokens": "node build.js",
    "css": "sass scss/letsui.scss src/letsui.css --style=expanded && sass scss/letsui.scss src/letsui.min.css --style=compressed --no-source-map",
    "css-watch": "sass scss/letsui.scss src/letsui.css --style=expanded && sass scss/letsui.scss src/letsui.min.css --style=compressed --no-source-map --watch"
  },
  "devDependencies": {
    "@terrazzo/cli": "^0.10.5",
    "@terrazzo/plugin-css": "^0.10.4",
    "@terrazzo/plugin-sass": "^0.10.4",
    "modularscale-sass": "^3.0.10",
    "sass": "^1.87.0"
  }
}
